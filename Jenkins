        stage('Clean') {
            steps {
                // Configure your Qt project
                sh 'cd HelloWord'
                //sh 'make clean'
                echo 'clean'
            }
        }
        stage('Configure') {
            steps {
                // Configure your Qt project
                sh 'qmake HelloWord.pro'
            }
        }
        
        stage('Build') {
            steps {
                // Build the Qt project
                sh 'make'
            }
        }
        
        stage('Test') {
            steps {
                // Run tests if any
                // Example: sh "make test"
                 echo 'Tested'
            }
        }
        
        stage('Deploy') {
            steps {
                // Deploy your application or artifacts
                // Example: sh "make install"
                   echo 'Deploy'
            }
        }
    }
